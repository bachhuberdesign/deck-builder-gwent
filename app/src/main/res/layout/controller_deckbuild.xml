<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/event_lane_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/lane_event_icon"
        app:layout_constraintBottom_toTopOf="@+id/event_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/event_top_guideline"/>

    <com.bachhuberdesign.deckbuildergwent.util.GradientOutlineTextView
        android:id="@+id/deck_power_total_text"
        fontPath="fonts/numbers.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:shadowColor="@color/md_grey_800"
        android:shadowDx="2.5"
        android:shadowDy="2.5"
        android:shadowRadius="2"
        android:text="0"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60dp"
        app:gradientColor="gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/event_bottom_guideline"/>

    <ImageView
        android:id="@+id/siege_lane_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lane_siege_icon"
        app:layout_constraintBottom_toTopOf="@+id/event_top_guideline"
        app:layout_constraintEnd_toStartOf="@+id/horizontalScrollView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/siege_lane_power_text"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <ImageView
        android:id="@+id/melee_lane_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lane_melee_icon"
        app:layout_constraintBottom_toTopOf="@+id/ranged_top_guideline"
        app:layout_constraintEnd_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/melee_lane_power_text"
        app:layout_constraintVertical_chainStyle="spread_inside"/>

    <ImageView
        android:id="@+id/ranged_lane_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lane_ranged_icon"
        app:layout_constraintBottom_toTopOf="@+id/siege_top_guideline"
        app:layout_constraintEnd_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@+id/ranged_lane_power_text"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/card_images_start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"/>

    <android.support.constraint.Guideline
        android:id="@+id/melee_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <android.support.constraint.Guideline
        android:id="@+id/ranged_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <android.support.constraint.Guideline
        android:id="@+id/siege_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>

    <android.support.constraint.Guideline
        android:id="@+id/event_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"/>

    <android.support.constraint.Guideline
        android:id="@+id/event_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"/>

    <TextView
        android:id="@+id/faction_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Faction Name"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/leader_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Leader Name"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faction_name_text"/>

    <ImageButton
        android:id="@+id/show_card_viewer_button"
        android:layout_width="75dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView4"/>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintTop_toTopOf="@+id/melee_top_guideline">

        <LinearLayout
            android:id="@+id/melee_image_holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:animateLayoutChanges="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingEnd="15dp"/>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/siege_top_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintTop_toTopOf="@+id/ranged_top_guideline">

        <LinearLayout
            android:id="@+id/ranged_image_holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:animateLayoutChanges="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingEnd="15dp"/>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/event_top_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintTop_toTopOf="@+id/siege_top_guideline"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/siege_image_holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:animateLayoutChanges="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingEnd="15dp"/>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/event_bottom_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintTop_toTopOf="@+id/event_top_guideline">

        <LinearLayout
            android:id="@+id/event_image_holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:animateLayoutChanges="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingEnd="15dp"/>
    </HorizontalScrollView>

    <com.bachhuberdesign.deckbuildergwent.util.GradientOutlineTextView
        android:id="@+id/melee_lane_power_text"
        fontPath="fonts/numbers.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:shadowColor="@color/md_grey_400"
        android:shadowDx="2.5"
        android:shadowDy="2.5"
        android:shadowRadius="2"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50dp"
        app:gradientColor="silver"
        app:layout_constraintBottom_toTopOf="@+id/melee_lane_icon"
        app:layout_constraintEnd_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/melee_top_guideline"/>

    <com.bachhuberdesign.deckbuildergwent.util.GradientOutlineTextView
        android:id="@+id/ranged_lane_power_text"
        fontPath="fonts/numbers.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:shadowColor="@color/md_grey_400"
        android:shadowDx="2.5"
        android:shadowDy="2.5"
        android:shadowRadius="2"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50dp"
        app:gradientColor="silver"
        app:layout_constraintBottom_toTopOf="@+id/ranged_lane_icon"
        app:layout_constraintEnd_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/ranged_top_guideline"/>

    <com.bachhuberdesign.deckbuildergwent.util.GradientOutlineTextView
        android:id="@+id/siege_lane_power_text"
        fontPath="fonts/numbers.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="3dp"
        android:shadowColor="@color/md_grey_400"
        android:shadowDx="2.5"
        android:shadowDy="2.5"
        android:shadowRadius="2"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="55dp"
        app:gradientColor="silver"
        app:layout_constraintBottom_toTopOf="@+id/siege_lane_icon"
        app:layout_constraintEnd_toStartOf="@+id/card_images_start_guideline"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/siege_top_guideline"/>

</android.support.constraint.ConstraintLayout>